.card.mx-auto.border-dark{ style: 'width: 20rem;'}
  .card-header
    %h4.card-title Log in
  .card-body
    .card-text
      = bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), autocomplete: 'off') do |f|
        .field
          = f.email_field :email, autocomplete: 'off'
        .field
          = f.password_field :password, autocomplete: "off"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
        .actions
          = f.submit "Log in", class: 'btn btn-primary btn-block'
  .card-footer
    = render "devise/shared/links"
